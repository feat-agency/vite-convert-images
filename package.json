{
	"name": "vite-convert-images",
	"version": "1.0.0",
	"description": "A Vite plugin to convert images to modern formats and create different conversions",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.cjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"./dist/index.js"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint src",
		"lint:fix": "oxlint src --fix",
		"format": "prettier --write src/**/*.{ts,tsx,json,md}",
		"format:check": "prettier --check src/**/*.{ts,tsx,json,md}"
	},
	"keywords": [
		"vite",
		"plugin",
		"image",
		"conversion",
		"webp",
		"avif",
		"optimization",
		"typescript"
	],
	"author": "Máté Nagy <mate.nagy@feat.hu>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mateenagy/vite-convert-images.git"
	},
	"bugs": {
		"url": "https://github.com/mateenagy/vite-convert-images/issues"
	},
	"homepage": "https://github.com/mateenagy/vite-convert-images#readme",
	"peerDependencies": {
		"vite": "^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@vitest/coverage-v8": "^1.0.0",
		"@vitest/ui": "^1.0.0",
		"oxlint": "^0.9.0",
		"prettier": "^3.1.0",
		"tsup": "^8.0.0",
		"typescript": "^5.3.0",
		"vite": "^5.0.0",
		"vitest": "^1.0.0"
	},
	"dependencies": {
		"sharp": "^0.32.0",
		"picocolors": "^1.0.0"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
